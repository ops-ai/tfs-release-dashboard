  {
        "manifestVersion": 1,
        "id": "tfs-release-dashboard",
        "version": "0.1.4",
        "name": "Query with PR Status Widget",
        "description": "A dashboard widget displaying results of a query with linked PR status",
        "publisher": "alexandrupuiu",
        "targets": [
            {
                "id": "Microsoft.VisualStudio.Services"
            }
        ],
        "icons": {
            "default": "img/logo.jpg"
        },
        "contributions": [
            {
                "id": "ReleaseDashboardWidget",
                "type": "ms.vss-dashboards-web.widget",
                "targets": [
                    "ms.vss-dashboards-web.widget-catalog"
                ],
                "properties": {
                    "name": "Query with PR Status Widget",
                    "description": "A dashboard widget displaying results of a query with linked PR status",
                    "catalogIconUrl": "img/CatalogIcon.png",
                    "previewImageUrl": "img/preview.png",                            
                    "uri": "releasedashboard.html",
                    "supportedSizes": [
                         {
                                "rowSpan": 2,
                                "columnSpan": 2
                            },
                         {
                                "rowSpan": 2,
                                "columnSpan": 3
                            },
                         {
                                "rowSpan": 2,
                                "columnSpan": 4
                            },
                         {
                                "rowSpan": 3,
                                "columnSpan": 2
                            },
                         {
                                "rowSpan": 3,
                                "columnSpan": 3
                            },
                         {
                                "rowSpan": 3,
                                "columnSpan": 4
                            },
                         {
                                "rowSpan": 4,
                                "columnSpan": 2
                            },
                         {
                                "rowSpan": 4,
                                "columnSpan": 3
                            },
                         {
                                "rowSpan": 4,
                                "columnSpan": 4
                            }
                        ],
                    "supportedScopes": ["project_team"]
                }
            }
        ],
        "files": [
            {
                "path": "releasedashboard.html", "addressable": true
            },
            {
                "path": "sdk/scripts", "addressable": true
            },
            {
                "path": "img", "addressable": true
            }
        ],
	    "scopes":[
	        "vso.work"
	    ]
    }